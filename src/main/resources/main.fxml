<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="main" alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
      fx:controller="UAM.s475286.Controller" onKeyPressed="#handleOnKeyPressed">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Copy" onAction="#copyBtnAction"/>
            <MenuItem text="Move" onAction="#moveBtnAction"/>
            <MenuItem text="New Folder" onAction="#createBtnAction"/>
            <MenuItem text="Delete" onAction="#deleteBtnAction"/>
            <MenuItem text="Exit" onAction="#btnExitAction"/>
        </Menu>
    </MenuBar>

    <HBox VBox.vgrow="ALWAYS">
        <fx:include fx:id="leftPanel" source="panel.fxml" HBox.hgrow="ALWAYS" />
        <fx:include fx:id="rightPanel" source="panel.fxml" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox spacing="5">
        <Button fx:id="btnCopy" maxWidth="Infinity" focusTraversable="false" text="F5 Copy" HBox.hgrow="ALWAYS" onAction="#copyBtnAction"/>
        <Button fx:id="btnMove" maxWidth="Infinity" focusTraversable="false" text="F6 Move" HBox.hgrow="ALWAYS" onAction="#moveBtnAction"/>
        <Button fx:id="btnNew" maxWidth="Infinity" focusTraversable="false" text="F7 New Folder" HBox.hgrow="ALWAYS" onAction="#createBtnAction"/>
        <Button fx:id="btnDelete" maxWidth="Infinity" focusTraversable="false" text="F8 Delete" HBox.hgrow="ALWAYS" onAction="#deleteBtnAction"/>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>
</VBox>
